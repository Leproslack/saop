<p id="notice"><%= notice %></p>

<p>
  <strong>Name:   <%= @form.name %></strong></br><b>Evaluating method: </b><%= @form.score_category %>

</p>
<ol>
  <% @form.formquestions.each do |question| %>
      <li><b><%= question.question_name %></b></br> Evaluating Method: <%= question.evaluate_method %></li>
      <p><%= link_to 'Destroy', [@form, question], method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</ol>
<p>
  <%= form_for ([ @form, @form.formquestions.build ]) do |f| %>
  <%= f.label :question_name, "Question title" %>
    <%= f.text_area :question_name %></br>
    <%= f.select :evaluate_method, (0..2) %>
    <%= f.submit "Save" %></p>
  <% end %>
</p>
<%= link_to 'Edit', edit_form_path(@form) %> |
<%= link_to 'Back', forms_path %>
