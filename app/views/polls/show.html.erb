<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @poll.name %>
</p>

<ol>
  <% @poll.questions.each do |question| %>
    <li><%= question.content %>
      <% question.answers.each do |answer| %>
      <ol>
        <li><%= answer.answer_rate %></li>
        <li><%= answer.answer_comment %></li>
      </ol>
      <% end %>
  <% end %>
</ol>

<%= link_to 'Edit', edit_poll_path(@poll) %> |
<%= link_to 'Back', polls_path %>
