<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @poll.name %>
</p>
<p>
  <strong>Pos rate:</strong>

</p>

<ol>
  <% @poll.categories.each do |category| %>
    <li><%= category.category_name %></li>
      <% category.questions.each do |question| %>
      <li><%= question.content %></li>
      <ol>
        <li><%= question.question_rate %></li>
        <li><%= question.question_comment %></li>
      </ol>
      <% end %>
  <% end %>
</ol>

<%= link_to 'Edit', edit_poll_path(@poll) %> |
