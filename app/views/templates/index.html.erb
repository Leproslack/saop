<div class="rows">
<div class="col-xs-10">
  <p id="notice"><%= notice %></p>

<h1>Templates</h1>

<table  class="table table-bordered">
  <thead>
    <tr>
      <th>Category</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.category %></td>
        <td><%= template.score %></td>
        <td><%= link_to 'Show', template %> |
            <%= link_to 'Edit', edit_template_path(template) %> |
            <%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_template_path %>
</div>
</div>
