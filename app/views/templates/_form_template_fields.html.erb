
<div class="fields">
<div class="list-group">
  <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :question %>
        <%= f.text_area :question, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-1">
          <%= f.select(:score, (0..2), {include_blank: "Select rate"}, {class: 'form-control'} )%>
      </div>
      <div class="col-sm-1">
            <%= f.link_to_remove "remove" %>
      </div>
    </div>
</div>
</div>
